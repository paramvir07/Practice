<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        /* Styling for the image */
        .enlargeable {
            width: 200px;
            height: 200px;
            transition: width 0.3s, height 0.3s; /* Add smooth transition effect */
        }

        /* Style for when image is hovered */
        .enlargeable:hover {
            width: 400px;
            height: 400px;
        }
    </style>
</head>
<body>
    <!-- Image with hover effect -->
    <img class="enlargeable" src="licensed-image.jpg" alt="Enlargable Image">
    
    <!-- JavaScript to handle hover effect -->
    <script>
        // Get the image element
        var image = document.querySelector('.enlargeable');

        // Add event listener for mouseenter event
        image.addEventListener('mouseenter', function() {
            // Increase the size of the image when hovered
            image.style.width = '400px';
            image.style.height = '400px';
        });

        // Add event listener for mouseleave event
        image.addEventListener('mouseleave', function() {
            // Revert back to original size when mouse leaves
            image.style.width = '200px';
            image.style.height = '200px';
        });
    </script>
</body>
</html>
